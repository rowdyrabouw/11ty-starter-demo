{
	"name": "11ty-starter",
	"version": "0.0.7",
	"description": "Boilerplate for projects built with Eleventy, Tailwind CSS, PurgeCSS and PostCSS",
	"scripts": {
		"clean": "del dist && del .parcel-cache",
		"clean:dev": "run-s clean && del src/static/css && del src/static/js",
		"dev:postcss": "postcss src/css/*.css -o src/static/css/style.css --watch --verbose",
		"dev:parcel": "parcel watch src/js/*.js --dist-dir src/static/js/",
		"dev:11ty": "eleventy --serve --watch",
		"build:postcss": "NODE_ENV=production postcss src/css/style.css -o dist/static/css/style.css",
		"build:11ty": "ELEVENTY_ENV=production eleventy",
		"build:parcel": "parcel build src/js/script.js --dist-dir dist/static/js/ --no-source-maps",
		"start": "run-s clean:dev && run-p dev:* --print-label",
		"build": "run-s clean build:* --print-label",
		"release": "standard-version && git push --follow-tags"
	},
	"author": "Rowdy Rabouw",
	"license": "MIT",
	"devDependencies": {
		"@11ty/eleventy": "^0.11.0",
		"@babel/core": "^7.11.6",
		"@babel/preset-env": "^7.11.5",
		"autoprefixer": "^9.8.6",
		"babel-loader": "^8.1.0",
		"cssnano": "^4.1.10",
		"del-cli": "^3.0.1",
		"html-minifier": "^4.0.0",
		"luxon": "^1.25.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0-beta.1",
		"postcss-cli": "^7.1.2",
		"standard-version": "^9.0.0",
		"tailwindcss": "^1.8.5"
	}
}
