{
	"name": "11ty-starter",
	"version": "0.0.11",
	"description": "Boilerplate for projects built with Eleventy, Tailwind CSS, PurgeCSS and PostCSS",
	"scripts": {
		"clean": "del dist && del .parcel-cache",
		"clean:dev": "run-s clean && del src/.temp/",
		"dev:11ty": "eleventy --serve --watch",
		"dev:images": "imagemin src/_img/* --out-dir=src/.temp/img",
		"dev:parcel": "parcel watch src/_js/*.js --dist-dir src/.temp/js/",
		"dev:postcss": "postcss src/_css/*.css -o src/.temp/css/style.css --watch --verbose",
		"build:11ty": "ELEVENTY_ENV=production eleventy",
		"build:images": "imagemin src/_img/* --out-dir=dist/img",
		"build:parcel": "parcel build src/_js/script.js --dist-dir dist/js/ --no-source-maps",
		"build:postcss": "NODE_ENV=production postcss src/_css/style.css -o dist/css/style.css",
		"start": "run-s clean:dev && run-p dev:* --print-label",
		"build": "run-s clean build:* --print-label",
		"release": "standard-version && git push --follow-tags"
	},
	"author": "Rowdy Rabouw",
	"license": "MIT",
	"devDependencies": {
		"@11ty/eleventy": "^0.11.0",
		"@babel/core": "^7.11.6",
		"@babel/preset-env": "^7.11.5",
		"autoprefixer": "^9.8.6",
		"babel-loader": "^8.1.0",
		"cssnano": "^4.1.10",
		"del-cli": "^3.0.1",
		"eleventy-plugin-error-overlay": "^0.1.2",
		"html-minifier": "^4.0.0",
		"imagemin-cli": "^6.0.0",
		"luxon": "^1.25.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0-beta.1",
		"postcss-cli": "^7.1.2",
		"standard-version": "^9.0.0",
		"tailwindcss": "^1.8.5"
	}
}
